generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model editor {
  id        Int    @id @default(autoincrement())
  username  String @unique
  password  String
  firstname String
  lastname  String
  Contents  content[]
}

model host {
  id                Int                @id @default(autoincrement())
  username          String             @unique
  password          String
  firstname         String
  lastname          String
  oAuth2Credentials oauth2credential[]
}

model oauth2credential {
  id           Int    @id @default(autoincrement())
  clientId     String
  clientSecret String
  hostId       Int
  host         host   @relation(fields: [hostId], references: [id])
}

model content {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  videoFile   String   // Assuming this stores the path or key to the video file in AWS S3
  editor      editor    @relation(fields: [editorId], references: [id])
  editorId    Int
}
